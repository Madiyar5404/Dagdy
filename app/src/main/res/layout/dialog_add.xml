<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_add_title"
                style="@style/Font.Bold.CrimsonPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/taqyryp_qosynyz"
                android:textColor="@color/authorizedTrueTextColor"
                android:textSize="@dimen/sp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/aty"
                android:textColor="@color/authorizedGreyTextColor"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="@+id/tv_add_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_title_name"
                style="@style/TextInputLayoutStyle.OutlinedBox.Suma"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_12"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_title_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    style="@style/EditTextStyle.Name"
                    android:hint="@string/engiziniz"
                    android:imeOptions="actionDone"
                    android:paddingStart="@dimen/dp_16" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_choose_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/tusin_tandanyz"
                android:textColor="@color/authorizedGreyTextColor"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="@+id/tv_title_name"
                app:layout_constraintTop_toBottomOf="@+id/til_title_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_color_picker"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/cl_add_color"
                app:layout_constraintStart_toStartOf="@+id/tv_choose_color"
                app:layout_constraintTop_toBottomOf="@+id/tv_choose_color" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                app:layout_constraintEnd_toStartOf="@+id/iv_add_color"
                app:layout_constraintTop_toTopOf="@+id/rv_color_picker">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_add_color"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    app:cardCornerRadius="@dimen/dp_72"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/color_picker_circle"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_gravity="center"
                        android:background="@color/colorTitleDayXiaomi"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_add_color_border"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    app:cardCornerRadius="@dimen/dp_72"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/color_picker_back"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp_72"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.kz.dagdy.ui.custom_view.piechart.color_picker.ColorView
                        android:id="@+id/colorView"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.kz.dagdy.ui.custom_view.piechart.color_picker.ColorComposer
                android:id="@+id/color_composer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_add_color" />

            <ImageView
                android:id="@+id/iv_add_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_32"
                android:background="@drawable/ic_circle"
                app:layout_constraintBottom_toBottomOf="@+id/rv_color_picker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rv_color_picker" />

            <com.kz.dagdy.ui.custom_view.piechart.color_picker.HueSlider
                android:id="@+id/hue_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/color_composer" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>