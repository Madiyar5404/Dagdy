<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorControlNormal">@color/EBEBEB</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_12</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Suma" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/borderColor</item>
        <item name="android:textColorHint">@color/authorizedGreyTextColor</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_12</item>
    </style>

    <style name="EditTextStyle" parent="Font.Regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>

        <item name="android:paddingStart">@dimen/dp_0</item>
        <item name="android:paddingLeft">@dimen/dp_0</item>
    </style>

    <style name="EditTextStyle.Phone" parent="EditTextStyle">
        <item name="android:digits">0123456789+- ()</item>
        <!--<item name="android:imeOptions">actionDone</item>-->
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Email" parent="EditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.Date" parent="EditTextStyle">
        <item name="android:inputType">none</item>
    </style>

    <style name="EditTextStyle.Iin" parent="EditTextStyle">
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextStyle.Password" parent="EditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.Name" parent="EditTextStyle">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditTextStyle.Amount" parent="EditTextStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="TextInputLayoutStyle.Profile" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutTheme.Profile</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/black40</item>
    </style>

    <style name="TextInputLayoutTheme.Profile">
        <item name="colorControlNormal">@color/EBEBEB</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="style_view_padding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
    </style>

    <style name="editTextAuth" parent="style_view_padding">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/et_color</item>
        <item name="android:textColorHint">@color/et_hint</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Phone" parent="TextInputLayoutStyle.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_user</item>
        <item name="startIconTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Number" parent="TextInputLayoutStyle.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_user</item>
        <item name="startIconTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Email" parent="TextInputLayoutStyle.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="startIconTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Date" parent="TextInputLayoutStyle.OutlinedBox">
        <item name="startIconDrawable">@drawable/ic_arrow_up</item>
        <item name="endIconDrawable">@drawable/ic_arrow_up</item>
        <item name="endIconTint">@null</item>
    </style>

    <style name="TextInputLayoutStyle.OutlinedBox.Password" parent="TextInputLayoutStyle.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconDrawable">@drawable/custom_password_toggle</item>
        <item name="startIconDrawable">@drawable/ic_key</item>
        <item name="endIconTint">@null</item>
        <item name="startIconTint">@null</item>
    </style>

</resources>