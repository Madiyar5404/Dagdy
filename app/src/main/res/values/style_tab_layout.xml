<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/bg_tab_selector</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">@color/authorizedBlackTextColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/authorizedBlackTextColor</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/crimson_pro_medium</item>
        <item name="fontFamily">@font/crimson_pro_medium</item>
    </style>

</resources>